find_package(SDL3 CONFIG)
if(NOT SDL3_FOUND)
  option(SDL3_DISABLE_SDL3MAIN "" OFF)
  option(SDL3_DISABLE_INSTALL "" ON)
  option(SDL3_DISABLE_UNINSTALL "" ON)
  set(SDL_SHARED OFF)
  set(SDL_SHARED_ENABLED_BY_DEFAULT OFF)
  set(SDL_STATIC ON)
  set(SDL_STATIC_ENABLED_BY_DEFAULT ON)
  set(SDL_TEST OFF)
  set(SDL_TEST_ENABLED_BY_DEFAULT OFF)
  add_subdirectory(${CMAKE_CURRENT_SOURCE_DIR}/ThirdParty/sdl/sdl)
endif()
